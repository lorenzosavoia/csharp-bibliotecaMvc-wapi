@model csharp_bibliotecaMvc.Models.AutoreLibro

@{
    ViewData["Title"] = "Aggiungi Autore";
}

<h1>Aggiungi Nuovo Autore</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAutore">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
             <div class="form-group">
                <label asp-for="IdLibro" class="control-label"></label>
                <input asp-for="IdLibro" class="form-control" value="@ViewBag.Id" />
                <span asp-validation-for="IdLibro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cognome" class="control-label"></label>
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="AddAutore" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}